-- Создание базы данных для больницы
CREATE DATABASE HospitalDB;

-- Использование базы данных
USE HospitalDB;

-- Таблица Patients (Пациенты)
CREATE TABLE Patients (
    PatientID INT PRIMARY KEY,
    FirstName VARCHAR(50) NOT NULL,
    LastName VARCHAR(50) NOT NULL,
    DateOfBirth DATE NOT NULL,
    Diagnosis VARCHAR(255)
);

-- Таблица Doctors (Врачи)
CREATE TABLE Doctors (
    DoctorID INT PRIMARY KEY,
    FirstName VARCHAR(50) NOT NULL,
    LastName VARCHAR(50) NOT NULL,
    Specialty VARCHAR(100) NOT NULL,
    Department VARCHAR(100)
);

-- Таблица Rooms (Палаты)
CREATE TABLE Rooms (
    RoomID INT PRIMARY KEY,
    RoomNumber VARCHAR(10) NOT NULL,
    RoomType VARCHAR(50) NOT NULL,
    Capacity INT NOT NULL
);

-- Таблица Appointments (Назначения)
CREATE TABLE Appointments (
    AppointmentID INT PRIMARY KEY,
    PatientID INT NOT NULL,
    DoctorID INT NOT NULL,
    AppointmentDate DATE NOT NULL,
    AppointmentTime TIME NOT NULL,
    FOREIGN KEY (PatientID) REFERENCES Patients(PatientID),
    FOREIGN KEY (DoctorID) REFERENCES Doctors(DoctorID)
);

-- Таблица Treatments (Лечения)
CREATE TABLE Treatments (
    TreatmentID INT PRIMARY KEY,
    AppointmentID INT NOT NULL,
    Description TEXT NOT NULL,
    Cost DECIMAL(10, 2) NOT NULL,
    FOREIGN KEY (AppointmentID) REFERENCES Appointments(AppointmentID)
);

-- Таблица Medications (Лекарства)
CREATE TABLE Medications (
    MedicationID INT PRIMARY KEY,
    Name VARCHAR(100) NOT NULL,
    Dosage VARCHAR(50) NOT NULL,
    Price DECIMAL(10, 2) NOT NULL
);

-- Таблица Prescriptions (Рецепты)
CREATE TABLE Prescriptions (
    PrescriptionID INT PRIMARY KEY,
    PatientID INT NOT NULL,
    MedicationID INT NOT NULL,
    Quantity INT NOT NULL,
    FOREIGN KEY (PatientID) REFERENCES Patients(PatientID),
    FOREIGN KEY (MedicationID) REFERENCES Medications(MedicationID)
);
